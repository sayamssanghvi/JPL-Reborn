<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.zodiac.sanghvi.jplreborn.Admin_BatBall">
<android.support.v7.widget.CardView
    android:layout_width="150dp"
    android:layout_height="180dp"
    app:cardCornerRadius="10dp"
    android:layout_alignTop="@+id/Team2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/Team1">
    <ImageButton
        android:id="@+id/img_team1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
 />
</android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    app:cardCornerRadius="10dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/Team2">
    <ImageButton
        android:id="@+id/img_team2"
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/apps"
        />
</android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/Vs"
        android:textColor="#f8f8f9"
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vs"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/team1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Team1"
        android:layout_marginTop="12dp"
        android:textColor="#f8f8f9"
        android:text="TextView"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Team1"
        android:layout_alignEnd="@+id/Team1" />

    <TextView
        android:id="@+id/team2"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/team1"
        android:text="TextView"
        android:textColor="#f8f8f9"
        android:layout_alignLeft="@+id/Team2"
        android:layout_alignStart="@+id/Team2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/Start"
        android:background="@color/colorPrimaryDark"
        android:textColor="#f8f8f9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:layout_marginBottom="45dp"
        android:text="Start" />

    <TextView
        android:id="@+id/textView3"
        android:gravity="center"
        android:textColor="#f8f8f9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:textSize="18sp"
        android:text="Choose the Team who Won the Toss" />
</RelativeLayout>
